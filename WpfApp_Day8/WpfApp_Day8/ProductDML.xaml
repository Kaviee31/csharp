<Window x:Class="WpfApp_Day8.ProductDML"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_Day8"
        mc:Ignorable="d"
        Title="ProductDML" Height="450" Width="800">

    <Grid Name="maingrid" Loaded="mainGridLoaded" >
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Label  Content="Northwind Enterprise" Style="{StaticResource BaseStyle}"  />
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"></ColumnDefinition>
                <ColumnDefinition Width="7*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Label Content="ProductId"     Grid.Row="0" />
            <Label Content="ProductName"    Grid.Row="1" />
            <Label Content="UnitPrice" Grid.Row="2" />
            <TextBox Grid.Row="0"   Grid.Column="1"     Margin="10" Name="txtProdid" Text="{Binding ProductID}" />
            <TextBox Grid.Row="1"  Grid.Column="1"    Margin="10" Name="txtProdname" Text="{Binding ProductName}" />
            <TextBox Grid.Row="2"  Grid.Column="1"   Margin="10" Name="txtPrice" Text="{Binding UnitPrice}"  />
        </Grid>

        <StackPanel  Orientation="Horizontal"    Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Height="30"      Width="50"    Content="_Add"     Margin="10" Name="btnAdd" Click="btnAdd_Click"  />
            <Button Height="30"      Width="50"    Content="_Edit" Margin="10"  Name="btnEdit" Click="btnEdit_Click />
            <Button Height="30"       Width="50"   Content="_Delete"  Margin="10" Name="btnDelete" Click="btnDelete_Click" />
            <Button Height="30"  Width="50"    Content="_Save"    Margin="10" Name="btnSave" Click="btnSave_Click"  />
        </StackPanel>

        <ListBox Name="lstItems" Grid.Row="3" Height="400" ItemsSource="{Binding}" SelectionChanged="lstItems_SelectionChanged">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel  Orientation="Horizontal" >
                        <TextBlock Margin="10" Width="100" Text="{Binding ProductID}"  />
                        <TextBlock Margin="10" Width="100" Text="{Binding ProductName}" />
                        <TextBlock Margin="10" Width="100" Text="{Binding UnitPrice}"  />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>


</Window>
