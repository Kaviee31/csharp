<Window x:Class="WpfApp_Day8.ObjectBinding01"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_Day8"
        mc:Ignorable="d"
        Title="ObjectBinding01" Height="450" Width="800">
    <Window.Resources>
        <local:ProductInfo x:Key="productInfo" ProductId="101" ProductName="tea" ProductPrice="100"/>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Label Content="Object-Binding Demo" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" />
 
        <Grid Grid.Row="1" DataContext="{StaticResource productInfo}" >
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Label Grid.Row="0" Grid.Column="0" Content="ProductId"  />
            <Label Grid.Row="1" Grid.Column="0" Content="ProductName" />
            <Label Grid.Row="2" Grid.Column="0" Content="ProductPrice" />
            <TextBox Grid.Row="0" Grid.Column="1"  Text="{Binding ProductId}" />
            <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding ProductName}"/>
            <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding ProductPrice}" />
        </Grid>

    </Grid>


</Window>
