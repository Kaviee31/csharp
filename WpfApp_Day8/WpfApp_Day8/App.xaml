<Application x:Class="WpfApp_Day8.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WpfApp_Day8"
             StartupUri="ProductDML.xaml">
    <Application.Resources>
        <Style TargetType="Control" x:Key="BaseStyle">
            <Setter Property="FontFamily" Value="Arial" />
            <Setter Property="FontSize" Value="20" />
            <Setter Property="Foreground" Value="DarkBlue" />
            <Setter Property="Margin" Value="10" />
        </Style>

        <Style TargetType="Label" BasedOn="{StaticResource BaseStyle}" >
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>

        <!--named style-->
        <Style TargetType="Label" BasedOn="{StaticResource BaseStyle}" x:Key="titleLabel" >
            <Setter Property="FontFamily" Value="Pristina" />
            <Setter Property="FontSize" Value="40" />
            <Setter Property="Foreground" Value="DarkMagenta" />
            <Setter Property="FontWeight" Value="ExtraBold" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />

        </Style>

        <Style TargetType="Button" BasedOn="{StaticResource BaseStyle}">

            <Setter Property="Height" Value="50" />
            <Setter Property="Width" Value="100" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <!--<Setter Property="Background" Value="LightSkyBlue" />-->
                    <Setter Property="BorderBrush" Value="DarkBlue" />
                    <Setter Property="BorderThickness" Value="5" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="TextBox" BasedOn="{StaticResource BaseStyle}">
            <Setter Property="Width" Value="500" />
            <Setter Property="Height" Value="50" />

            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <!--<Setter Property="Background" Value="LightSkyBlue" />-->

                    <Setter Property="BorderThickness" Value="5" />
                    <Setter Property="Background" Value="Yellow" />
                    <Setter Property="BorderBrush" Value="DarkRed" />

                </Trigger>


            </Style.Triggers>
        </Style>

        <Style TargetType="StackPanel">
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />


        </Style>



    </Application.Resources>
</Application>
