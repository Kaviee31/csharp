<Window x:Class="WpfApp_ICommandDemo.UIICommandDemo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_ICommandDemo"
        mc:Ignorable="d"
        Title="UIICommandDemo" Height="450" Width="800">
    <Window.Resources>
        <local:ConterViewModel x:Key="CounterVM" Counter="0"/>
    </Window.Resources>
    <StackPanel DataContext="{StaticResource CounterVM}">
        <TextBox Margin="10" Text="{Binding Counter}"/>
        <Button Content="Submit" Width="100"
                Height="30" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center"
                Command="{Binding IncrementCommand}" Click="Button_Click"/>
    </StackPanel>
</Window>
