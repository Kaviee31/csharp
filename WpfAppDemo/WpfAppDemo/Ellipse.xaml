<Window x:Class="WpfAppDemo.Ellipse"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppDemo"
        mc:Ignorable="d"
        Title="Ellipse" Height="450" Width="800">
    <StackPanel>
        <TextBox Name="txt1" Text="{Binding ElementName=txt2, Path=Text, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
        <TextBox Name="txt2" />
        
        <Ellipse Fill="LightCoral" Height="{Binding ElementName=slider1, Path=Value}"
                 Width ="{Binding ElementName=slider1, Path=Value}"/>
        <Slider Name="slider1" Minimum="50" Maximum="300" Value="200" Margin="10"
                Width="500"/>
       
    </StackPanel>
</Window>
