<Window x:Class="WpfApp_INotify_and_ICommand.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_INotify_and_ICommand"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <local:Person x:Key="Person1"  FirstName="Kavitha" LastName="Shanmugam"/>
        
        <Style TargetType="TextBox">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Width" Value="300"/>
        </Style>


    </Window.Resources>
    <StackPanel DataContext="{StaticResource Person1}">
        <TextBox Height="30" 
                 Width="200" 
                 Text="{Binding FirstName ,UpdateSourceTrigger=PropertyChanged}" Margin="10"
                 />
        <TextBox Height="30" 
                 Width="200" 
                 Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}" Margin="10"/>
        <TextBlock Height="30" 
                   Width="200" 
                   Text="{Binding FullName}" Margin="10"
                   FontWeight="Bold"/>
    </StackPanel>
</Window>
